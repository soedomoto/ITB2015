<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.soedomoto.sakernas.questionaire.QBlockVE">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:text="34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:text="Apakah selama seminggu yang lalu mempunyai pekerjaan tambahan?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="0"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/b5r34">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:text="Apakah lapangan usaha/bidang pekerjaan tambahan utama dari tempat bekerja selama seminggu yang lalu?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="2"
                android:layout_column="1" />

            <com.soedomoto.sakernas.widget.QEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:id="@+id/b5r35" />

            <TextView
                android:text="36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:text="Apakah status/kedudukan dalam pekerjaan tambahan utama?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="4"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="5"
                android:layout_column="1"
                android:id="@+id/b5r36">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Berusaha sendiri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Berusaha dibantu buruh tidak tetap/pekerja keluarga/tidak dibayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="3"
                    android:text="Berusaha dibantu buruh tetap/dibayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="4"
                    android:text="Buruh/karyawan/pegawai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="5"
                    android:text="Pekerja bebas di pertanian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="6"
                    android:text="Pekerja bebas di nonpertanian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="7"
                    android:text="Pekerja keluarga/tidak dibayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </GridLayout>
    </ScrollView>
</FrameLayout>

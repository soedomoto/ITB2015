<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.soedomoto.sakernas.questionaire.QBlockVG">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:text="40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:text="Apakah pernah mempunyai pekerjaan/usaha sebelumnya?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="0"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/b5r40">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:text="Apakah pernah berhenti bekerja dari pekerjaan/usaha selama setahun terakhir?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="2"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="3"
                android:layout_column="1"
                android:id="@+id/b5r41">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:text="Apakah alasan utama berhenti bekerja dari pekerjaan/usaha selama setahun terakhir?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="4"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="5"
                android:layout_column="1"
                android:id="@+id/b5r42">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="PHK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Usaha terhenti/bangkrut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="3"
                    android:text="Pendapatan kurang memuaskan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="4"
                    android:text="Tidak cocok dengan lingkungan kerja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="5"
                    android:text="Habis masa kerja/kontrak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="6"
                    android:text="Tidak sesuai dengan keahlian/keterampilan yang dimiliki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="7"
                    android:text="Hamil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="8"
                    android:text="Mengurus rumah tangga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="9"
                    android:text="Lainnya, tuliskan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <com.soedomoto.sakernas.widget.QEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_row="6"
                android:layout_column="1"
                android:id="@+id/b5r42lainnya" />

            <TextView
                android:text="43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="7"
                android:layout_column="0" />

            <TextView
                android:text="Apakah lapangan usaha/bidang pekerjaan sebelum berhenti bekerja dari pekerjaan/usaha terakhir?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="7"
                android:layout_column="1" />

            <com.soedomoto.sakernas.widget.QEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="1"
                android:id="@+id/b5r43" />

            <TextView
                android:text="44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="9"
                android:layout_column="0" />

            <TextView
                android:text="Apakah status/kedudukan sebelum berhenti bekerja dari pekerjaan/usaha terakhir?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="9"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="10"
                android:layout_column="1"
                android:id="@+id/b5r44">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Berusaha sendiri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Berusaha dibantu buruh tidak tetap/pekerja keluarga/tidak dibayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="3"
                    android:text="Berusaha dibantu buruh tetap/dibayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="4"
                    android:text="Buruh/karyawan/pegawai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="5"
                    android:text="Pekerja bebas di pertanian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="6"
                    android:text="Pekerja bebas di nonpertanian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="7"
                    android:text="Pekerja keluarga/tidak dibayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="11"
                android:layout_column="0" />

            <TextView
                android:text="Apakah pernah bekerja di luar negeri dalam 5 tahun terakhir?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="11"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="12"
                android:layout_column="1"
                android:id="@+id/b5r45">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="Negara:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestion"
                android:layout_row="13"
                android:layout_column="1" />

            <com.soedomoto.sakernas.widget.QEditText
                android:ems="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_row="13"
                android:layout_column="1"
                android:id="@+id/b5r45negara" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </GridLayout>
    </ScrollView>
</FrameLayout>

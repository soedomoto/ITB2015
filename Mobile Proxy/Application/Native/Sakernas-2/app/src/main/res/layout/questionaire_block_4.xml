<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.soedomoto.sakernas.questionaire.QBlockIV">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:text="No. Urut ART"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="0"
                android:layout_column="1" />

            <com.soedomoto.sakernas.widget.QEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/b4r1" />

            <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:text="Nama Anggota Rumah Tangga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="2"
                android:layout_column="1" />

            <com.soedomoto.sakernas.widget.QEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:id="@+id/b4r2" />

            <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:text="Hubungan Dengan Kepala Rumah Tangga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="4"
                android:layout_column="1" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="5"
                android:layout_column="1" >

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:id="@+id/b4r3">

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="1"
                        android:text="KRT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="2"
                        android:text="Istri/Suami"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="3"
                        android:text="Anak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="4"
                        android:text="Menantu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="5"
                        android:text="Cucu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="6"
                        android:text="Ortu/Mertua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="7"
                        android:text="Family Lain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="8"
                        android:text="Pembantu Ruta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="9"
                        android:text="Sopir/Tukang Kebun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.soedomoto.sakernas.widget.QRadioButton
                        custom:qRadioButton_value="0"
                        android:text="Lainnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1" >


                </RadioGroup>
            </GridLayout>

            <TextView
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="6"
                android:layout_column="0" />

            <TextView
                android:text="Jenis Kelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="6"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="7"
                android:layout_column="1"
                android:id="@+id/b4r4">

                <com.soedomoto.sakernas.widget.QRadioButton
                    custom:qRadioButton_value="1"
                    android:text="Laki-laki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    custom:qRadioButton_value="2"
                    android:text="Perempuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="8"
                android:layout_column="0" />

            <TextView
                android:text="Bulan dan Tahun Lahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="8"
                android:layout_column="1" />

            <com.soedomoto.sakernas.widget.QEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="1"
                android:id="@+id/b4r5" />

            <TextView
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="10"
                android:layout_column="0" />

            <TextView
                android:text="Umur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="10"
                android:layout_column="1" />

            <com.soedomoto.sakernas.widget.QEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="11"
                android:layout_column="1"
                android:id="@+id/b4r6" />

            <TextView
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="12"
                android:layout_column="0" />

            <TextView
                android:text="Status Perkawinan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="12"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="13"
                android:layout_column="1"
                android:id="@+id/b4r7">

                <com.soedomoto.sakernas.widget.QRadioButton
                    custom:qRadioButton_value="1"
                    android:text="Belum Kawin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    custom:qRadioButton_value="2"
                    android:text="Kawin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    custom:qRadioButton_value="3"
                    android:text="Cerai Hidup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    custom:qRadioButton_value="4"
                    android:text="Cerai Mati"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="14"
                android:layout_column="0" />

            <TextView
                android:text="Status Perkawinan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="14"
                android:layout_column="1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="15"
                android:layout_column="1"
                android:id="@+id/b4r8">

                <com.soedomoto.sakernas.widget.QRadioButton
                    custom:qRadioButton_value="1"
                    android:text="Tidak/belum pernah sekolah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    custom:qRadioButton_value="2"
                    android:text="Masih bersekolah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    custom:qRadioButton_value="3"
                    android:text="Tidak bersekolah lagi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </GridLayout>
    </ScrollView>
</FrameLayout>

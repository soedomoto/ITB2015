<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.soedomoto.sakernas.questionaire.QBlockVB">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:text="a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:text="Apakah selama seminggu yang lalu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC3"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnSpan="2" />

            <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="1"
                android:layout_column="2" />

            <TextView
                android:text="Bekerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC4"
                android:layout_row="1"
                android:layout_column="3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="2"
                android:layout_column="3"
                android:id="@+id/b5r5a1">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="3"
                android:layout_column="2" />

            <TextView
                android:text="Sekolah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC4"
                android:layout_row="3"
                android:layout_column="3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="4"
                android:layout_column="3"
                android:id="@+id/b5r5a2">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="3"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="4"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="5"
                android:layout_column="2" />

            <TextView
                android:text="Mengurus Rumah Tangga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC4"
                android:layout_row="5"
                android:layout_column="3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="6"
                android:layout_column="3"
                android:id="@+id/b5r5a3">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="7"
                android:layout_column="2" />

            <TextView
                android:text="Kegiatan lainnya, selain ’kegiatan pribadi’"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC4"
                android:layout_row="7"
                android:layout_column="3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="8"
                android:layout_column="3"
                android:id="@+id/b5r5a4">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="3"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="4"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="9"
                android:layout_column="1" />

            <TextView
                android:text="Dari kegiatan 1 s.d 4 yang menyatakan “Ya” di atas, kegiatan apakah yang menggunakan waktu terbanyak selama seminggu yang lalu?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC3"
                android:layout_row="9"
                android:layout_column="2"
                android:layout_columnSpan="2" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="10"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:id="@+id/b5r5b">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Bekerja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Sekolah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="3"
                    android:text="Mengurus Rumah Tangga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="4"
                    android:text="Lainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="11"
                android:layout_column="0" />

            <TextView
                android:text="Apakah mempunyai pekerjaan/usaha, tetapi sementara tidak bekerja selama seminggu yang lalu?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="11"
                android:layout_column="1"
                android:layout_columnSpan="3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="12"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:id="@+id/b5r6">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="13"
                android:layout_column="0" />

            <TextView
                android:text="Apakah alasan utama (NAMA) sementara tidak bekerja selama seminggu yang lalu?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="13"
                android:layout_column="1"
                android:layout_columnSpan="3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="14"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:id="@+id/b5r7">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Cuti (tahunan/sakit/bersalin)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Sekolah/pendidikan/pelatihan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="3"
                    android:text="Aturan waktu kerja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="4"
                    android:text="Pemogokan kerja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="5"
                    android:text="Penurunan aktivitas ekonomi (permintaan pasar/jumlah pesanan)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="6"
                    android:text="Penangguhan kerja (cuaca buruk, kekurangan bahan baku, pergantian musim, dan lain-lain)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="7"
                    android:text="Lainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <com.soedomoto.sakernas.widget.QEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="15"
                android:layout_column="3"
                android:id="@+id/b5r7lainnya" />

            <TextView
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="16"
                android:layout_column="0" />

            <TextView
                android:text="Apakah (NAMA) tetap memperoleh penghasilan/gaji/upah selama periode sementara tidak bekerja?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="16"
                android:layout_column="1"
                android:layout_columnSpan="3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="17"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:id="@+id/b5r8">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="18"
                android:layout_column="0" />

            <TextView
                android:text="Sudah berapa lama (NAMA) sementara tidak bekerja?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="18"
                android:layout_column="1"
                android:layout_columnSpan="3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="19"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:id="@+id/b5r9">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="0-3 Bulan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="> 3 Bulan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireNumber"
                android:layout_row="20"
                android:layout_column="0" />

            <TextView
                android:text="Apakah ada jaminan (NAMA) untuk kembali bekerja pada unit usaha/tempat kerja sekarang?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuestionaireQuestionC2"
                android:layout_row="20"
                android:layout_column="1"
                android:layout_columnSpan="3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="21"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:id="@+id/b5r10">

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="1"
                    android:text="Ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.soedomoto.sakernas.widget.QRadioButton
                    app:qRadioButton_value="2"
                    android:text="Tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </GridLayout>
    </ScrollView>
</FrameLayout>

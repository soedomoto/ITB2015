<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.soedomoto.sakernas.activity.MainActivity"
    tools:showIn="@layout/main_navbar">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Propinsi"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp" />

        <TextView
            android:text="Kabupaten"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:text="Kecamatan"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPropinsi"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:layout_row="0"
            android:layout_column="1" />

        <EditText
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtKabupaten"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:layout_row="1"
            android:layout_column="1" />

        <EditText
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtKecamatan"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:text="Save"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:layout_row="3"
            android:layout_column="1"
            android:textAlignment="center" />
    </GridLayout>
</RelativeLayout>

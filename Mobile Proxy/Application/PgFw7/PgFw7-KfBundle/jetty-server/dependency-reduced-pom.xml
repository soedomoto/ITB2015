<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.soedomoto</groupId>
  <artifactId>jetty-server</artifactId>
  <packaging>bundle</packaging>
  <name>Jetty :: Server Core</name>
  <version>8.1.19.v20160209</version>
  <description>Provides Jetty Server</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5.2</version>
        <goals>
          <goal>install-file</goal>
        </goals>
        <configuration>
          <file>${project.build.directory}/${project.artifactId}-${project.version}.jar</file>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>3.0.1</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Activator>${bundle.namespace}.Activator</Bundle-Activator>
            <Import-Package>org.osgi.*;version=1.3,</Import-Package>
            <Export-Package>javax.servlet.*;-split-package:=merge-first,
                            org.eclipse.jetty.*;-split-package:=merge-first,</Export-Package>
            <Provide-Capability />
            <Embed-Dependency>*; scope=compile; type=!pom; inline=**/*.class|**/*.ico|**/*.dtd|**/*.xml|**/*.properties|**/*.map|**/*.default|**/*.providers</Embed-Dependency>
            <_removeheaders>Include-Resource,
                            Private-Package,
                            Embed-Dependency,
                            Embed-Transitive</_removeheaders>
            <_noee>true</_noee>
          </instructions>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.5.0</version>
        <executions>
          <execution>
            <id>dx</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/media/DATA/SOFTWARE/dex2jar-2.0/d2j-jar2dex.sh</executable>
              <workingDirectory>${project.build.directory}</workingDirectory>
              <arguments>
                <argument>--output</argument>
                <argument>classes.dex</argument>
                <argument>${project.artifactId}-${project.version}.jar</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>aapt</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>/media/DATA/ANDROID-SDK/LINUX/build-tools/23.0.3/aapt</executable>
              <workingDirectory>${project.build.directory}</workingDirectory>
              <arguments>
                <argument>add</argument>
                <argument>${project.artifactId}-${project.version}-dex.jar</argument>
                <argument>classes.dex</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <configuration>
              <outputFile>${project.artifactId}-${project.version}-dex</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <snapshots />
      <id>internal</id>
      <name>Local Maven Repo</name>
      <url>file:///media/DATA/SOFTWARE/MAVEN/repository/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <version>4.2.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
      <version>4.2.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <bundle.symbolicName>${project.groupId}.${project.artifactId}</bundle.symbolicName>
    <bundle.namespace>${project.groupId}.bundle.jetty</bundle.namespace>
  </properties>
</project>

